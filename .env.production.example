DISCORD_BOT_TOKEN=CHANGE_ME

# ---------- File Storage Configuration ----------
AWS_ACCESS_KEY_ID=CHANGE_ME
AWS_SECRET_ACCESS_KEY=CHANGE_ME
AWS_REGION=us-east-1
S3_BUCKET_NAME=rabbit-launchpad-uploads
S3_BUCKET_REGION=us-east-1

# CDN Configuration
CDN_ENABLED=true
CDN_URL=https://cdn.rabbitlaunchpad.io
CDN_PROVIDER=cloudflare
CDN_VERSION=1.0.0

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,svg,pdf
UPLOAD_TEMP_DIR=/tmp/uploads
STORAGE_TYPE=s3

# ---------- Email Configuration ----------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@rabbitlaunchpad.io
SMTP_PASS=CHANGE_ME
SMTP_FROM=noreply@rabbitlaunchpad.io
SMTP_FROM_NAME=Rabbit Launchpad

# Email Features
EMAIL_ENABLED=true
EMAIL_VERIFICATION_ENABLED=false
EMAIL_NOTIFICATIONS_ENABLED=true
EMAIL_TEMPLATES_DIR=./templates/email

# ---------- Monitoring & Logging ----------
