# ==============================================
# Rabbit Launchpad Production Environment Variables
# ==============================================
# Copy this file to .env.production and fill in actual values

# ---------- Server Configuration ----------
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Server Features
SERVER_ENABLED=true
API_ENABLED=true
WEBSOCKET_ENABLED=true
CRON_JOBS_ENABLED=true

# Performance Configuration
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000
BODY_LIMIT=10mb

# ---------- Database Configuration ----------
DATABASE_URL=postgresql://username:password@postgres:5432/rabbit_launchpad
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=rabbit_launchpad
DATABASE_USER=postgres
DATABASE_PASSWORD=CHANGE_ME
DATABASE_SSL=true
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# Database Features
DATABASE_ENABLED=true
DATABASE_LOGGING=false
DATABASE_TIMEZONE=UTC
DATABASE_AUTO_MIGRATE=true

# ---------- Redis Configuration ----------
REDIS_URL=redis://:CHANGE_ME@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME
REDIS_DB=0
REDIS_ENABLED=true

# Redis Features
REDIS_SESSIONS=true
REDIS_CACHE=true
REDIS_RATE_LIMIT=true
REDIS_PUBSUB=true

# ---------- Blockchain Configuration ----------
BSC_RPC_URL=https://bsc-dataseed.binance.org
BSC_RPC_BACKUP_URL=https://bsc-dataseed1.defibit.io
BSC_CHAIN_ID=56
BSC_BLOCK_TIME=3000
BSC_GAS_LIMIT=21000

# Smart Contract Addresses
LAUNCHPAD_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
TOKEN_FACTORY_ADDRESS=0x0000000000000000000000000000000000000000
BONDING_CURVE_ADDRESS=0x0000000000000000000000000000000000000000
ROUTER_ADDRESS=0x10ED43C718714eb63d5aA57B78B54704E256024E
TREASURY_ADDRESS=0x0000000000000000000000000000000000000000

# Blockchain Features
BLOCKCHAIN_ENABLED=true
BLOCKCHAIN_WEBHOOK_ENABLED=true
BLOCKCHAIN_SYNC_ENABLED=true
CONTRACT_VERIFICATION_ENABLED=false

# ---------- Security Configuration ----------
JWT_SECRET=CHANGE_ME_SUPER_SECRET_JWT_KEY_PRODUCTION
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
JWT_ALGORITHM=HS256
JWT_ISSUER=rabbitfun-launchpad
JWT_AUDIENCE=rabbitfun-users

# CORS Configuration
CORS_ORIGIN=https://rabbitlaunchpad.io,https://www.rabbitlaunchpad.io
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_REQUESTS_API=1000
RATE_LIMIT_MAX_REQUESTS_AUTH=500
RATE_LIMIT_MAX_REQUESTS_TOKEN_CREATE=10
RATE_LIMIT_STRICT_MODE=true

# Security Headers
HELMET_ENABLED=true
FRAMEGUARD_ACTION=DENY
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true

# ---------- API Keys Configuration ----------
# Blockchain APIs
