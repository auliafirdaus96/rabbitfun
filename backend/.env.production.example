# ==============================================
# Rabbit Launchpad - Production Environment Template
# PostgreSQL Production Configuration
# ==============================================

# ---------- Server Configuration ----------
PORT=3001
NODE_ENV=production
HOST=0.0.0.0

# Server Features
SERVER_ENABLED=true
API_ENABLED=true
WEBSOCKET_ENABLED=true
CRON_JOBS_ENABLED=true

# Performance Configuration
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000
BODY_LIMIT=10mb

# ---------- Database Configuration ----------
# PostgreSQL Production Database
DATABASE_URL="postgresql://username:password@localhost:5432/rabbit_launchpad_prod"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=rabbit_launchpad_prod
DATABASE_USER=postgres
DATABASE_PASSWORD=CHANGE-THIS-SECURE-PASSWORD
DATABASE_SSL=true
DATABASE_SSL_MODE=require
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# Database Features
DATABASE_ENABLED=true
DATABASE_LOGGING=false
DATABASE_TIMEZONE=UTC
DATABASE_AUTO_MIGRATE=false

# ---------- Redis Configuration ----------
# Redis for caching and sessions
REDIS_URL="redis://username:password@localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE-THIS-REDIS-PASSWORD
REDIS_DB=0
REDIS_ENABLED=true

# Redis Features
REDIS_SESSIONS=true
REDIS_CACHE=true
REDIS_RATE_LIMIT=true
REDIS_PUBSUB=true

# ---------- Blockchain Configuration ----------
# BSC Network Configuration (Mainnet)
BSC_RPC_URL=https://bsc-dataseed.binance.org
BSC_RPC_BACKUP_URL=https://bsc-dataseed1.defibit.io
BSC_CHAIN_ID=56
BSC_BLOCK_TIME=3000
BSC_GAS_LIMIT=21000

# Smart Contract Addresses (Production)
LAUNCHPAD_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
TOKEN_FACTORY_ADDRESS=0x0000000000000000000000000000000000000000
BONDING_CURVE_ADDRESS=0x0000000000000000000000000000000000000000
ROUTER_ADDRESS=0x10ED43C718714eb63d5aA57B78B54704E256024E
TREASURY_ADDRESS=0x0000000000000000000000000000000000000000

# Blockchain Features
BLOCKCHAIN_ENABLED=true
BLOCKCHAIN_WEBHOOK_ENABLED=true
BLOCKCHAIN_SYNC_ENABLED=true
CONTRACT_VERIFICATION_ENABLED=true

# ---------- Security Configuration ----------
# JWT Configuration (Production - STRONG)
JWT_SECRET="CHANGE-THIS-SUPER-SECURE-JWT-SECRET-256-BIT-MINIMUM-PRODUCTION-2025"
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256
JWT_ISSUER=rabbit-launchpad
JWT_AUDIENCE=rabbit-launchpad-users

# CORS Configuration (Production - RESTRICTIVE)
CORS_ORIGIN=https://rabbitlaunchpad.com,https://app.rabbitlaunchpad.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate Limiting Configuration (Production - STRICT)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_REQUESTS_API=500
RATE_LIMIT_MAX_REQUESTS_AUTH=250
RATE_LIMIT_MAX_REQUESTS_TOKEN_CREATE=5
RATE_LIMIT_STRICT_MODE=true

# Security Headers
HELMET_ENABLED=true
FRAMEGUARD_ACTION=DENY
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
CSP_ENABLED=true

# ---------- API Keys Configuration ----------
# Blockchain APIs (Production - REAL KEYS REQUIRED)
ALCHEMY_API_KEY=CHANGE-THIS-ALCHEMY-MAINNET-KEY
MORALIS_API_KEY=CHANGE-THIS-MORALIS-MAINNET-KEY
BSCSCAN_API_KEY=CHANGE-THIS-BSCSCAN-API-KEY
INFURA_PROJECT_ID=CHANGE-THIS-INFURA-PROJECT-ID

# External APIs (Production)
COINGECKO_API_KEY=CHANGE-THIS-COINGECKO-API-KEY
COINMARKETCAP_API_KEY=CHANGE-THIS-COINMARKETCAP-API-KEY
DEXSCREENER_API_KEY=CHANGE-THIS-DEXSCREENER-API-KEY

# Social APIs (Production)
TWITTER_API_KEY=CHANGE-THIS-TWITTER-API-KEY
TWITTER_API_SECRET=CHANGE-THIS-TWITTER-API-SECRET
TELEGRAM_BOT_TOKEN=CHANGE-THIS-TELEGRAM-BOT-TOKEN
DISCORD_BOT_TOKEN=CHANGE-THIS-DISCORD-BOT-TOKEN

# ---------- File Storage Configuration ----------
# AWS S3 Configuration (Production)
AWS_ACCESS_KEY_ID=CHANGE-THIS-AWS-ACCESS-KEY
AWS_SECRET_ACCESS_KEY=CHANGE-THIS-AWS-SECRET-KEY
AWS_REGION=us-east-1
S3_BUCKET_NAME=rabbitlaunchpad-uploads
S3_BUCKET_REGION=us-east-1

# CDN Configuration
CDN_ENABLED=true
CDN_URL=https://cdn.rabbitlaunchpad.com
CDN_PROVIDER=cloudflare
CDN_VERSION=1.0.0

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,svg,pdf
UPLOAD_TEMP_DIR=/tmp/uploads
STORAGE_TYPE=s3

# ---------- Email Configuration ----------
# SMTP Configuration (Production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@rabbitlaunchpad.com
SMTP_PASS=CHANGE-THIS-APP-PASSWORD
SMTP_FROM=noreply@rabbitlaunchpad.com
SMTP_FROM_NAME=Rabbit Launchpad

# Email Features
EMAIL_ENABLED=true
EMAIL_VERIFICATION_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true

# ---------- Monitoring & Logging ----------
# Logging Configuration
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=104857600
LOG_MAX_FILES=30

# Error Tracking
SENTRY_DSN=CHANGE-THIS-SENTRY-DSN
SENTRY_ENVIRONMENT=production
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=0.1

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=30000

# ---------- Feature Flags ----------
# Application Features
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=false
ENABLE_REFERRALS=true

# Trading Features
ENABLE_TRADING=true
ENABLE_STAKING=false
ENABLE_LIQUIDITY_MINING=false
ENABLE_GOVERNANCE=false

# Admin Features
ENABLE_ADMIN_PANEL=true
ENABLE_ANALYTICS=true
ENABLE_MODERATION=true
ENABLE_BULK_OPERATIONS=true

# ---------- WebSocket Configuration ----------
WS_PORT=8081
WS_PATH=/socket.io

# ---------- Production Security ----------
# Security Hardening
ALLOW_HTTP=false
SKIP_SSL_VERIFY=false
ALLOW_SELF_SIGNED_CERTS=false

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Rabbit Launchpad is currently under maintenance. We'll be back shortly.
MAINTENANCE_BYPASS_KEY=CHANGE-THIS-MAINTENANCE-BYPASS-KEY

# Emergency Controls
EMERGENCY_SHUTDOWN=false
EMERGENCY_MESSAGE=Service temporarily unavailable due to maintenance.
EMERGENCY_CONTACT_EMAIL=support@rabbitlaunchpad.com

# ---------- Performance Configuration ----------
# Caching Strategy
CACHE_STRATEGY=redis
CACHE_DEFAULT_TTL=300
CACHE_MAX_KEYS=10000
CACHE_COMPRESSION=true

# Database Optimization
DATABASE_CONNECTION_POOLING=true
DATABASE_QUERY_CACHE=true
DATABASE_INDEX_OPTIMIZATION=true
DATABASE_SLOW_QUERY_LOG=true
DATABASE_SLOW_QUERY_THRESHOLD=100

# Performance Monitoring
PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=100
MAX_RESPONSE_TIME=5000

# ---------- SSL/TLS Configuration ----------
# SSL Certificate Paths
SSL_CERT_PATH=/etc/ssl/certs/rabbitlaunchpad.crt
SSL_KEY_PATH=/etc/ssl/private/rabbitlaunchpad.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# SSL Configuration
SSL_PROTOCOL=TLSv1.2
SSL_CIPHERS=ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384
SSL_PREFER_SERVER_CIPHERS=true
SSL_HONOR_CIPHER_ORDER=true

# ---------- Cluster Configuration ----------
# PM2 Cluster Settings
INSTANCES=max
EXEC_MODE=cluster
MAX_MEMORY_RESTART=1G
AUTO_RESTART=true
WATCH=false
MAX_RESTARTS=10
MIN_UPTIME=10s

# ---------- Backup Configuration ----------
# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE=s3
BACKUP_S3_BUCKET=rabbitlaunchpad-backups

# File Backup
UPLOAD_BACKUP_ENABLED=true
UPLOAD_BACKUP_SCHEDULE=0 3 * * *

# ---------- Development Override ----------
# NEVER SET TO true IN PRODUCTION
DEV_MODE=false
DEBUG_SQL=false
DEBUG_REDIS=false
DEBUG_REQUESTS=false
SKIP_AUTH_IN_TESTS=false