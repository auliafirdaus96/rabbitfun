# Production Environment Configuration for Rabbit Launchpad Backend
# Copy this file to .env.production and fill in your actual values

# Application Configuration
NODE_ENV=production
PORT=3001
API_VERSION=v1

# Database Configuration
PRODUCTION_DATABASE_URL=postgresql://username:password@hostname:5432/rabbit_launchpad_prod
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30000
DATABASE_SSL_MODE=require

# Redis Configuration
REDIS_URL=redis://username:password@hostname:6379/0
REDIS_CLUSTER_NODES=redis-node1:6379,redis-node2:6379,redis-node3:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret-key
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_REQUESTS_API=1000
RATE_LIMIT_MAX_REQUESTS_TOKEN=5
RATE_LIMIT_MAX_REQUESTS_TRADING=30
RATE_LIMIT_MAX_REQUESTS_UPLOAD=10

# Blockchain Configuration
BSC_RPC_URL=https://bsc-dataseed.binance.org
BSC_NETWORK=mainnet
BSC_CHAIN_ID=56

# Contract Addresses
BONDING_CURVE_ADDRESS=0x...your-bonding-curve-address
FACTORY_ADDRESS=0x...your-factory-address
ROUTER_ADDRESS=0x...your-router-address

# Alchemy Configuration (Required)
ALCHEMY_API_KEY=your_alchemy_api_key_here
ALCHEMY_NETWORK=bnb-mainnet
ALCHEMY_MAX_RETRIES=3
ALCHEMY_TIMEOUT=30000

# Moralis Configuration (Required)
MORALIS_API_KEY=your_moralis_api_key_here
MORALIS_WEBHOOK_URL=https://your-domain.com/webhooks/moralis
MORALIS_STREAM_ID=your_stream_id_here
MORALIS_TIMEOUT=30000

# Security Settings
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
TRUSTED_PROXIES=ip1,ip2,ip3

# File Upload Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,svg,pdf
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Rabbit Launchpad

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key
DATADOG_API_KEY=your-datadog-key

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Performance Configuration
CACHE_TTL=3600
MAX_CONNECTIONS=1000
TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000
HEADERS_TIMEOUT=66000

# Monitoring Endpoints
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics
STATUS_ENDPOINT=/status

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_WEBSOCKETS=true
ENABLE_BACKGROUND_JOBS=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true

# Social Media Integration
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# CDN Configuration
CDN_URL=https://cdn.yourdomain.com
STATIC_URL=https://static.yourdomain.com

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# External Services
IPFS_GATEWAY_URL=https://ipfs.io
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key

# Development Overrides (set to false in production)
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_PLAYGROUND=false
ENABLE_INTROSPECTION=false