# PostgreSQL Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/rabbit_launchpad"

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Redis Configuration (Optional - for caching)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Blockchain Configuration
ALCHEMY_API_KEY="your-alchemy-api-key"
MORALIS_API_KEY="your-moralis-api-key"
BSC_RPC_URL="https://bsc-dataseed.binance.org"
BSC_TESTNET_RPC_URL="https://data-seed-prebsc-1-s1.binance.org:8545"

# Smart Contract Addresses
LAUNCHPAD_CONTRACT_ADDRESS="0x0000000000000000000000000000000000000000"
TOKEN_FACTORY_ADDRESS="0x0000000000000000000000000000000000000000"

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:8080,http://localhost:8081"

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# WebSocket Configuration
WS_PORT=8081

# Monitoring Configuration
LOG_LEVEL="info"
ENABLE_METRICS=true
METRICS_PORT=9090

# Analytics Configuration
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=30

# Cache Configuration
CACHE_TTL=3600
ENABLE_QUERY_CACHE=true

# Security Headers
ENABLE_HELMET=true
ENABLE_CSP=true

# Development Only
ENABLE_SWAGGER=true
ENABLE_DEBUG_LOGS=false