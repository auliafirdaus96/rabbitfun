# ==============================================
# Rabbit Launchpad - PostgreSQL Environment
# PostgreSQL Migration Configuration
# ==============================================

# ---------- Server Configuration ----------
PORT=3001
NODE_ENV=development
HOST=localhost

# ---------- Database Configuration ----------
# PostgreSQL Database (Local Development)
DATABASE_URL="postgresql://postgres:password@localhost:5432/rabbit_launchpad_dev"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=rabbit_launchpad_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_SSL=false
DATABASE_SSL_MODE=prefer
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# Database Features
DATABASE_ENABLED=true
DATABASE_LOGGING=true
DATABASE_TIMEZONE=UTC
DATABASE_AUTO_MIGRATE=true

# ---------- Redis Configuration ----------
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=true

# ---------- Blockchain Configuration ----------
BSC_RPC_URL=https://bsc-dataseed.binance.org
BSC_RPC_BACKUP_URL=https://bsc-dataseed1.defibit.io
BSC_CHAIN_ID=56
BSC_BLOCK_TIME=3000
BSC_GAS_LIMIT=21000

# Smart Contract Addresses (Development/Test)
LAUNCHPAD_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
TOKEN_FACTORY_ADDRESS=0x0000000000000000000000000000000000000000
BONDING_CURVE_ADDRESS=0x0000000000000000000000000000000000000000
ROUTER_ADDRESS=0x10ED43C718714eb63d5aA57B78B54704E256024E
TREASURY_ADDRESS=0x0000000000000000000000000000000000000000

# Blockchain Features
BLOCKCHAIN_ENABLED=true
BLOCKCHAIN_WEBHOOK_ENABLED=true
BLOCKCHAIN_SYNC_ENABLED=false
CONTRACT_VERIFICATION_ENABLED=false

# ---------- Security Configuration ----------
JWT_SECRET=dev-super-secret-jwt-key-change-in-production-2025
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
JWT_ALGORITHM=HS256
JWT_ISSUER=rabbit-launchpad
JWT_AUDIENCE=rabbit-launchpad-users

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:8080
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_MAX_REQUESTS_API=2000
RATE_LIMIT_MAX_REQUESTS_AUTH=1000
RATE_LIMIT_MAX_REQUESTS_TOKEN_CREATE=50
RATE_LIMIT_STRICT_MODE=false

# Security Headers
HELMET_ENABLED=true
FRAMEGUARD_ACTION=DENY
HSTS_ENABLED=false
HSTS_MAX_AGE=31536000
CSP_ENABLED=false

# ---------- API Keys Configuration ----------
# Blockchain APIs (Get your free API keys)
ALCHEMY_API_KEY=your-alchemy-api-key-here
MORALIS_API_KEY=your-moralis-api-key-here
BSCSCAN_API_KEY=your-bscscan-api-key-here
INFURA_PROJECT_ID=your-infura-project-id-here

# External APIs
COINGECKO_API_KEY=demo-key-for-testing
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key-here
DEXSCREENER_API_KEY=your-dexscreener-api-key-here

# Social APIs
TWITTER_API_KEY=your-twitter-api-key-here
TWITTER_API_SECRET=your-twitter-api-secret-here
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
DISCORD_BOT_TOKEN=your-discord-bot-token-here

# ---------- File Storage Configuration ----------
STORAGE_TYPE=local
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,svg,pdf

# ---------- Email Configuration ----------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@rabbitlaunchpad.dev
SMTP_FROM_NAME=Rabbit Launchpad Development

# Email Features
EMAIL_ENABLED=false
EMAIL_VERIFICATION_ENABLED=false
EMAIL_NOTIFICATIONS_ENABLED=false

# ---------- Monitoring & Logging ----------
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=1.0

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_INTERVAL=30000

# ---------- Feature Flags ----------
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_EMAIL_VERIFICATION=false
ENABLE_2FA=false
ENABLE_REFERRALS=false

ENABLE_TRADING=false
ENABLE_STAKING=false
ENABLE_LIQUIDITY_MINING=false
ENABLE_GOVERNANCE=false

ENABLE_ADMIN_PANEL=true
ENABLE_ANALYTICS=true
ENABLE_MODERATION=false
ENABLE_BULK_OPERATIONS=false

# ---------- Development Configuration ----------
DEV_SEED_DATA=true
DEV_AUTO_MIGRATE=true
DEV_SYNC_CONTRACTS=false
DEV_ENABLE_CORS=true

# Debug Features
DEBUG_SQL=true
DEBUG_REDIS=true
DEBUG_REQUESTS=true
DEBUG_PERFORMANCE=true

# ---------- Testing Configuration ----------
TEST_MODE=false
MOCK_EXTERNAL_APIS=false
ENABLE_TEST_ROUTES=true
SKIP_AUTH_IN_TESTS=false

# ---------- WebSocket Configuration ----------
WS_PORT=8081
WS_PATH=/socket.io

# ---------- PostgreSQL Migration Settings ----------
POSTGRES_MIGRATION_MODE=true
POSTGRES_SOURCE_DB="file:./prisma/dev.db"
POSTGRES_TARGET_URL="postgresql://postgres:password@localhost:5432/rabbit_launchpad_dev"