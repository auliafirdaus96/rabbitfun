# Test Database Configuration
NODE_ENV=test

# PostgreSQL Test Database
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/rabbit_launchpad_test
DATABASE_URL=postgresql://test:test@localhost:5432/rabbit_launchpad_test

# Alternative database configurations for different environments
# For Docker:
# TEST_DATABASE_URL=postgresql://test:test@postgres-test:5432/rabbit_launchpad_test

# For CI/CD:
# TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/rabbit_launchpad_test

# Test Redis Configuration
TEST_REDIS_URL=redis://localhost:6379/1
REDIS_URL=redis://localhost:6379/1

# JWT Configuration for Testing
JWT_SECRET=test-secret-key-for-jest-testing-purpose-only
JWT_EXPIRES_IN=1h

# BSC Configuration (Testnet)
BSC_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
BSC_NETWORK=testnet

# Rate Limiting (Relaxed for testing)
RATE_LIMIT_WINDOW_MS=15000
RATE_LIMIT_MAX_REQUESTS=1000

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Logging Configuration
LOG_LEVEL=error

# WebSocket Configuration
WS_PORT=8082

# File Upload Configuration
UPLOAD_DIR=./tests/uploads
MAX_FILE_SIZE=5242880

# Contract Configuration (Test addresses)
BONDING_CURVE_ADDRESS=0x0000000000000000000000000000000000000000
FACTORY_ADDRESS=0x0000000000000000000000000000000000000000

# Test-specific settings
TEST_TIMEOUT=30000
TEST_PARALLEL=true
TEST_CLEANUP=true